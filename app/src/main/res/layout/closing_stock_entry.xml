<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_background"
    android:orientation="vertical">
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_closingStock_skuHeader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Brand Name - Sku Name"
                    android:textColor="@color/black"
                    android:textSize="16dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_closingStock_openingStock"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center|center_horizontal"
                    android:text="OPENING-STOCK"
                    android:textColor="@color/darkgrey"

                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_closingStock_openingfloreStock"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center|center_horizontal"
                    android:text="OS-BR"
                    android:visibility="gone"
                    android:textColor="@color/darkgrey"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_closingStock_midValue"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center|center_horizontal"
                    android:text="MIDDAY-STOCK"
                    android:textColor="@color/darkgrey"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/txt_closingStock_br"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center|center_horizontal"
                    android:text="CS-BR"
                    android:visibility="gone"
                    android:textColor="@color/darkgrey"
                    android:textSize="15dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:gravity="center|center_horizontal"
                    android:text="STOCK"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/ed_closingStock"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:paddingBottom="8dp"
                    android:paddingTop="5dp"
                    android:gravity="center|center_horizontal"
                    android:background="@drawable/edit_text_border"
                    android:hint="Closing Stock"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:maxLength="4"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

